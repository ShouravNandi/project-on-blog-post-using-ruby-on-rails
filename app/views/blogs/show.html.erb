<h1><%= @blog.title %></h1>

<h3><%= @blog.author_name %></h3>

<p><%= @blog.body %></p>


  <div class="btn btn-warning">
    <%= link_to "Edit", edit_blog_path(@blog) %>
  </div>
  <div class="btn btn-danger">
   <%= link_to "Destroy", blog_path(@blog),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </div>


<h3>Comments</h3>
<% @blog.comments.each do |comment| %>
  <p>
    <strong>Name:</strong>
    <%= comment.name %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h3>Add a comment:</h3>
<%= form_with model: [ @blog, @blog.comments.new ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <div>
    <p>
    <%= form.submit class: 'btn btn-success' %>
    </p>
  </div>

  <div class="btn btn-info">
    <%= link_to "All Blog", blogs_about_path %>
  </div>
<% end %>

