<%= form_with model: @blog do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @blog.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
        <% end %>

  </div>

  <div>
    <%= form.label :author_name %><br>
    <%= form.text_area :author_name %>
    <% @blog.errors.full_messages_for(:author_name).each do |message| %>
      <div><%= message %></div>
        <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @blog.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
        <% end %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success' %>
  </div>

<% end %>